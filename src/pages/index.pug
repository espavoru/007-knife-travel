  +blog()
    +title({
      bold: 'Explore the Travel',
      light: 'Through our Blog & Journal',
    })

    article.blog__item
      +picture({
        'img': 'blog-01',
        'alt': 'Hiking Greenland’s Arctic Circle Trail 2019',
        'lg': false,
        'md': false,
        'ext': 'jpg'
      })
      h3.blog__title Hiking Greenland’s Arctic Circle Trail 2019
