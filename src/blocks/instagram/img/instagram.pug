//- Все примеси в этом файле должны начинаться c имени блока (instagram)

mixin instagram(data, mods)

  //- Принимает:
  //-   data    {object} - данные
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +instagram('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' instagram--' + modsList[i].trim();
      }
    }

  section.instagram(class=allMods)&attributes(attributes)
    .instagram__inner
      block
    ///.instagram__inner
  ///.instagram
