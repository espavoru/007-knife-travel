//- Все примеси в этом файле должны начинаться c имени блока (title)

mixin title(data, mods)

  //- Принимает:
  //-   data      {object} - данные
  //-     -bold   {string} - bold text
  //-     -light  {string} - light text
  //-   mods      {string} - список модификаторов
  //- Вызов:
        +title('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' title--' + modsList[i].trim();
      }
    }

  h2.title(class=allMods)&attributes(attributes)
    b.title__bold!= data.bold
    br
    | #{data.light}
    block
